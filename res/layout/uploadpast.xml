<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="#ff35b6c9">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/nameTag" android:layout_alignParentTop="true" android:layout_alignParentStart="true"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:layout_alignParentTop="true" android:layout_toEndOf="@+id/nameTag" android:id="@+id/nameInput"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:layout_below="@+id/nameTag" android:layout_alignParentStart="true" android:id="@+id/dateTag"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/dateInput" android:layout_below="@+id/nameInput" android:layout_toEndOf="@+id/dateTag"/>
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/diseaseList" android:layout_below="@+id/dateInput" android:layout_alignParentStart="true"
            android:layout_above="@+id/submit"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/submit" android:layout_alignParentBottom="true" android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"/>
</RelativeLayout>